
    <section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem; height: 30rem;">
                    <img class="card-img-top"
                        src="/product-image/{{this.product._id}}.jpg"
                        alt="Card image cap"
                        style="height: 15rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.name}}</h5>
                        <p class="card-text">Price :AED {{this.product.price}}</p>
                        <p class="card-text">Quantity :{{this.quantity}}</p>
                        
                         
                    </div>
                </div>
                </div>
            {{/each}}
            
        </div>
    </div>
</section>

