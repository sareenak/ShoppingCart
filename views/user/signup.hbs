<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Sign Up</h2>
            <form>
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" placeholder="Enter the name" name="name">
                </div>
                 <div class="form-group">
                    <label>Email Address</label>
                    <input type="email" class="form-control" placeholder="Enter the email" name="email">
                </div>
                 <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="Password" name="password">
                </div>

            </form>
            <a href="/login">Already have an account?</a>
            <button class="btn btn-primary float-right" type="submit" >Signup</button>
        </div>
    </div>
</div>