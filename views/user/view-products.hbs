
    <section>
    <div class="container mt-5">
        <div class="row">
            {{#each product}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem; height: 30rem;">
                    <img class="card-img-top"
                        src="/product-image/{{this._id}}.jpg"
                        alt="Card image cap"
                        style="height: 15rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.category}}</p>
                        <p class="card-text">{{this.description}}</p>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
                </div>
            {{/each}}
            
        </div>
    </div>
</section>

